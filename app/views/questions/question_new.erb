<section class="new_question">

    <div class="col-sm-8 col-sm-offset-2">
      <div class="panel panel-default white-panel-heading">
        <center>
          <div class="panel-heading">
            <h3 class="panel-title">New Question</h3>
          </div>
        </center>
        <div class="panel-body">

          <!-- <div id="login-alert" class="alert alert-danger col-sm-12"></div> -->
          <form class="form-horizontal" action="/users/<%= @user.id %>/questions/create" method="post" accept-charset="utf-8">

            <div class="form-group">
              <div class="col-sm-12">
                <input name="question[content]" id="inputQuestion" placeholder="Enter question here..."class="form-control"></input>
              </div>
            </div>

            <div class="form-group">
              <div class="col-xs-12">
                <button type="submit" class="btn btn-success btn-block">Submit</button>
              </div>
            </div>

          </form>
        </div><!-- .panel-body -->
      </div><!-- .panel -->
    </div><!-- .col-sm-6 -->

</section><!-- .signup -->

